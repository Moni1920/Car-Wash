package com.carwash.washservice.services;

import java.io.IOException;
import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.util.StringUtils;
import org.springframework.web.multipart.MultipartFile;
import com.carwash.washservice.models.Receipt;
import com.carwash.washservice.repo.ReceiptRepo;



public class ReceiptService {
	
	@Autowired
	private ReceiptRepo repo;
	
	
	public List<Receipt> getreceipts()
	{
		return repo.findAll();
	}
	
	public Receipt getReceipt(String email)
	{
		List<Receipt> receipt = repo.findAll();
		for(Receipt rt: receipt)
		{
			if(rt.getEmailid().contentEquals(email))
			{
				return rt;
			}
		}
		return null;
	}
	
	
	public Receipt addReceipt(Receipt rts,MultipartFile file) throws IOException
	{
		String fileName = StringUtils.cleanPath(file.getOriginalFilename());   
		rts.setImage(file.getBytes());
		List<Receipt> receipts= repo.findAll();
		for(Receipt l : receipts)
		{
			if(l.getServicetype().contentEquals(rts.getServicetype()))
			{
				return null;
			}
		}
		return repo.save(rts);
	}
	
	public Boolean deleteReceipt(String username)
	{
		List<Receipt> all = repo.findAll();
		for( Receipt l: all)
		{
			if(l.getUsername().contentEquals(username))
			{
				repo.deleteById(username);
				return true;
			}
		}
		return false;
	}

}
